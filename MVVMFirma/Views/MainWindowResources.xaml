    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:WszystkiePozycjeZamowieniaViewModel}">
        <vw:WszystkiePozycjeZamowieniaView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:WszystkieStanyMagazynoweViewModel}">
