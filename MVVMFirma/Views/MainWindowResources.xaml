    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:WszystkiePozycjeFakturyViewModel}">
        <vw:WszystkiePozycjeFakturyView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:WszystkieWydaniaViewModel}">
